<div class="container mt-5 my-5">
  <h1 class="">All Tasks</h1>
    <div class="list">
      <ul class="list-group my-5">
        <div class="list_item">
          <% @tasks.each do |task| %>
            <li class="list-group-item w-50 fs-2">
              <%= link_to task.title, task_path(task)%>
              <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                <i class="fa-solid fa-trash-can"></i>
              <% end %>
            </li>
          <% end %>
        </div>
      </ul>
    </div>
  <div class="button btn btn-primary text-light">
    <%= link_to "/tasks/new" do %>
      <button class="btn btn-primary">Add a task</button>
    <% end %>
  </div>
</div>
